<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwinklyWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="clr-namespace:TwinklyWPF.Controls"
    x:Class="TwinklyWPF.MainWindow"
    Title="Twinkly WPF"
    MinWidth="620"
    MinHeight="500"
    mc:Ignorable="d"
    KeyDown="Window_KeyDown"
    KeyUp="Window_KeyUp"
    Closing="Window_Closing">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <!--  ValidatingControl Style  -->
        <Style x:Key="ValidatingControl" TargetType="{x:Type FrameworkElement}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={x:Static RelativeSource.Self}}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="Background" Value="DarkRed" />
            <Setter Property="Foreground" Value="Yellow" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="8 2" />
        </Style>
        <Style TargetType="{x:Type ToggleButton}">
            <Setter Property="Padding" Value="8 2" />
            <Setter Property="Background" Value="LimeGreen" />
        </Style>
    </Window.Resources>

    <Grid Background="Black" Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition x:Name="MessageRow" Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="25"
            Foreground="Fuchsia"
            Text="Chromatic Aberrations" />
        <TextBlock
            Grid.Row="0"
            Grid.RowSpan="2"
            Margin="2,0,2,2"
            FontSize="15"
            Foreground="WhiteSmoke"
            Text="{Binding Message}"
            ToolTip="Message"
            TextWrapping="Wrap" />
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1" Grid.Column="1"
                    Margin="5 0"
                    HorizontalAlignment="Right">
            <Button x:Name="Rescan"
                    Content="Rescan"
                    MinWidth="50"
                    Click="Rescan_Click" />
            <ComboBox ItemsSource="{Binding Devices}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding ActiveDevice}"
                      Width="200" 
                      Margin="5 0"/>
            <Button x:Name="AddIpAddress" 
                    Content="Add..." 
                    Click="AddIpAddress_Click"
                    MinWidth="50"/>
        </StackPanel>

        <Controls:DeviceDetailsWindow 
            x:Name="DeviceDetailsWindow"
            DataContext="{Binding ActiveDevice}"
            Grid.Row="2"
            BorderBrush="Fuchsia"
            BorderThickness="5"
            MinWidth="400"
            MinHeight="400" />

        <!--  Control  -->
        <Grid
            Grid.Row="4"
            TextBlock.FontSize="16"
            Visibility="{Binding TwinklyDetected, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2">
                <ToggleButton x:Name="RealtimeTest" 
                              Content="Realtime Test" 
                              Command="{Binding RealtimeTestCommand}"
                              CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"/>
                <TextBlock FontWeight="Bold" VerticalAlignment="Center" Padding="8 0" >
                    <Run Text="Mode:" Foreground="Orange" />
                    <Run Text=" "/>
                    <Run Text="{Binding RTMovie.ColorModeName, Mode=OneWay}" Foreground="GreenYellow" />
                </TextBlock>
                <TextBlock Text="{Binding RTMovie.ColorModeName, Mode=OneWay}" Foreground="GreenYellow" MinWidth="50" />
                <TextBlock FontWeight="Bold" VerticalAlignment="Center" Padding="8 0" IsEnabled="{Binding RTMovie.Running}">
                    <Run Text="FPS:" Foreground="Orange" />
                    <Run Text=" "/><Run Text="{Binding FPS, Mode=OneWay, StringFormat=N3}" Foreground="GreenYellow" />
                </TextBlock>
                <CheckBox Content="Preview" 
                          IsChecked="{Binding PreviewMode}" 
                          ToolTip="Preview mode: animates frames, but does not send to devices"
                          FontWeight="Bold" Foreground="Orange"
                          VerticalAlignment="Center"/>
                <Button Content="Layout" ToolTip="ActiveDevice: led/layout/full"
                        Click="Layout_Click" />
                <Button x:Name="MovieConfig" Content="MovieConfig" ToolTip="Get and set MovieConfig for active device"
                        Click="MovieConfig_Click" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2">
                <ToggleButton x:Name="MIDIEnabled" 
                              Content="MIDI" 
                              IsChecked="{Binding RTMovie.Piano.IsMonitoring, Mode=OneWay}" 
                              Click="MIDIEnabled_Click" />
                <TextBlock FontWeight="Bold" VerticalAlignment="Center" Padding="8 0" >
                    <Run Text="Mode:" Foreground="Orange" />
                    <Run Text="{Binding RTMovie.Piano, Mode=OneWay}" Foreground="GreenYellow" />
                </TextBlock>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
